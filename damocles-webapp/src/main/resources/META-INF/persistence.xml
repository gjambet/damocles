<persistence>
	<persistence-unit name="persistenceUnit">
		
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>net.guillaume.damocles.entities.User</class>
		<class>net.guillaume.damocles.entities.Guard</class>
		<class>net.guillaume.damocles.entities.Message</class>
		<class>net.guillaume.damocles.entities.Recipient</class>
		<class>net.guillaume.damocles.entities.Trigger</class>

		<properties>

			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />

			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.archive.autodetection" value="class" />

			<property name="current_session_context_class" value="thread" />
			<property name="connection.pool_size" value="3" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
